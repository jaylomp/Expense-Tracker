@{
    ViewData["Title"] = "Expenses";
}

@model List<Expense>

<div class="text-center">
    <h1 class="display-4">Expenses</h1>
    <br />
    <hr />
    <h3>Total expenses $@ViewBag.Expenses</h3>
    <a asp-action="CreateEditExpense" asp-action="CreateEditExpense" class="btn btn-primary">Add an Expense</a>
    <br />
    <table class ="table">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Value
                </th>
                <th>
                    Description
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var expense in Model)
                {
                    <tr>
                        <td>
                        @expense.Id
                        </td>
                        <td>
                        @expense.Value
                        </td>
                        <td>
                            @expense.Description
                        </td>
                        <td>
                            <a asp-action="CreateEditExpense" asp-route-id="@expense.Id">Edit</a>
                            <a asp-action="DeleteExpense" asp-route-id="@expense.Id" onclick="return confirmDelete()">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        function confirmDelete() {
            return confirm("Are you sure you want to delete this expense?");
        }
    </script>
}